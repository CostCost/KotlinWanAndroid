<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <app.itgungnir.kwa.common.widget.head_bar.HeadBar
        android:id="@+id/headBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <app.itgungnir.kwa.common.widget.input.UserNameInput
        android:id="@+id/userNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <app.itgungnir.kwa.common.widget.input.PasswordInput
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <app.itgungnir.kwa.common.widget.input.PasswordInput
        android:id="@+id/confirmPwdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <app.itgungnir.kwa.common.widget.input.ProgressButton
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp" />

</LinearLayout>